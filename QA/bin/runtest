import sys

from pycopia.QA import testrunner
from pycopia.QA import testloader
from pycopia.QA import config

def runtest(argv):
    cfg = config.get_config()
    cfg.userinterfacetype = "default"
    tr = testrunner.TestRunner(cfg)
    tri = testloader.TestRunnerInterface(tr)
    try:
        tri(argv)
    except testrunner.TestRunnerError:
        ex, val, tb = sys.exc_info()
        if cfg.flags.DEBUG:
            from pycopia import debugger
            debugger.post_mortem(tb, ex, val)
        else:
            import traceback
            traceback.print_exception(ex, val, tb)


runtest(sys.argv)

